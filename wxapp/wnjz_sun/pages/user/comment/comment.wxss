.container {
    background: #fff;
}

.session {
    display: flex;
    padding: 20rpx 0rpx;
    border-top: 1px solid #cbcbcb;
}

.imgsrc {
    width: 160rpx;
    height: 160rpx;
    margin-left: 20rpx;
}

.score {
    margin-left: 20rpx;
}

.goods-score {
    margin-top: 38rpx;
    font-size: 30rpx;
}

.star-group {
    margin-top: 30rpx;
}

.stars {
    width: 37rpx;
    height: 36rpx;
    padding-right: 28rpx;
}

.comment {
    padding: 18rpx 20rpx;
    width: 710rpx;
    height: 234rpx;
    font-size: 26rpx;
    color: #999;
    line-height: 40rpx;
    background: #f8f8f8;
}

textarea {
    width: 710rpx;
    height: 234rpx;
    color: #222;
}

.picture {
    padding: 20rpx 20rpx 0rpx 20rpx;
    display: flex;
    flex-wrap: wrap;
}

.upload {
    border: 1px solid #ececec;
    width: 160rpx;
    height: 160rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    font-size: 20rpx;
    color: #999;
    margin-right: 19rpx;
    margin-bottom: 20rpx;
}

.upload:nth-child(4n) {
    margin-right: 0rpx;
}

.icon {
    width: 74rpx;
    height: 62rpx;
    margin-bottom: 14rpx;
}

.uploadPic {
    width: 160rpx;
    height: 160rpx;
}

checkbox .wx-checkbox-input {
    border-radius: 50%;
    width: 40rpx;
    height: 40rpx;
}

checkbox .wx-checkbox-input.wx-checkbox-input-checked {
    border: none;
    background: #41c2fc;
}

checkbox .wx-checkbox-input.wx-checkbox-input-checked::before {
    border-radius: 50%;
    width: 40rpx;
    height: 40rpx;
    line-height: 40rpx;
    text-align: center;
    font-size: 30rpx;
    color: #fff;
    background: transparent;
    transform: translate(-50%,-50%) scale(1);
}

.anonymous {
    padding: 0rpx 20rpx;
    display: flex;
    align-items: center;
    font-size: 26rpx;
}

.sub {
    display: flex;
    align-items: center;
    justify-content: center;
    margin-top: 130rpx;
}

.btn {
    width: 657rpx;
    height: 92rpx;
    font-size: 34rpx;
    border-radius: 10rpx;
    color: #fff;
    background-color: #41c2fc;
}