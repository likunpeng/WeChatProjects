<view class="container">
    <view>
        <view class="session">
            <view>{{shop.pt_name}}客服</view>
        </view>
        <view class="session white">
            <view class="session-title">在线客服</view>
            <button class="concat" openType="contact">
                <text>点击图片发起会话</text>
                <image class="icon" src="../../../../style/images/icon24.png"></image>
            </button>
        </view>
        <view bindtap="dialog" class="session white">
            <view class="session-title">客服热线</view>
            <view>
                <text wx:if="{{phone!=null}}">{{phone}}</text>
                <image class="icon" src="../../../../style/images/icon23.png"></image>
            </view>
        </view>
    </view>
</view>
