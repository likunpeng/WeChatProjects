.user-info {
    height: 346rpx;
    background-image: -webkit-linear-gradient(90deg,rgb(65,194,252) 0%,rgb(119,211,252)100%);
    display: flex;
    flex-direction: column;
    align-items: center;
    color: #fff;
}

.thumb {
    width: 160rpx;
    height: 160rpx;
    border-radius: 50%;
    margin: 60rpx 0rpx 36rpx 0rpx;
    border: 2rpx solid #fff;
}

.user-count {
    display: flex;
    padding: 15rpx 0rpx;
    background: #fff;
}

.user-money {
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 375rpx;
    height: 130rpx;
}

.user-money:first-child {
    width: 374rpx;
    border-right: 1px solid #ececec;
}

.icon {
    width: 42rpx;
    height: 28rpx;
    margin-right: 24rpx;
}

.m_up {
    margin-top: 26rpx;
}

.num {
    font-size: 42rpx;
    color: #666;
    font-weight: 700;
}

.m_dowm {
    margin-top: 26rpx;
    display: flex;
    align-items: center;
}

.nav-group {
    display: flex;
    justify-content: space-around;
    align-items: center;
    background: #fff;
    color: #666;
    font-size: 30rpx;
    height: 80rpx;
    line-height: 80rpx;
}

.nav {
    display: inline-block;
    height: 80rpx;
}

.on {
    color: #41c2fc;
    border-bottom: 4rpx solid #41c2fc;
    box-sizing: border-box;
}

.list {
    background: #fff;
    margin-top: 20rpx;
}

.list-up {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 20rpx 0rpx;
    border-bottom: 1px solid #ececec;
    font-weight: 700;
    flex-direction: column;
}

.list-collect {
  margin: 20px 20px 20px 20px;
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
  padding: 20px;
  border-bottom: 1px solid #ececec;
  font-weight: 700;
}

.item {
    width: auto;
    height: auto;
    border: 1px solid #999;
    padding-bottom: 8px;
}

.item-title {
  margin-top: 8px;
  color: #222;
  text-align: center;
}

.list-subscription {
  display: flex;
  flex-direction: row;
}

.item-subscription {
  flex-direction: row;
  direction: ltr;
  position: relative;
  width: 100%;
  height: 68px;
}

.subscription-img {
  width: 60px;
  height: 60px;
  margin-left: 10px;
}

.subscription-title {
  margin-left: 30px;
  color: red;
  width: auto;
  height: auto;
  font-size: 14px;
  top: 45%;
  left: 25%;
  margin: auto 0;
  position: absolute;
}

.subscription-btn {
  width: 65px;
  height: 30px;
  position: relative;
  top: 32%;
  font-size: 12px;
  float: right;
  margin-right: 10px;
}

.left-title {
    color: #222;
    line-height: 42rpx;
    display: -webkit-box!important;
    overflow: hidden;
    text-overflow: ellipsis;
    word-break: break-all;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}

.img {
    height: 180rpx;
    width: 180rpx;
}

.nobg {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    font-size: 34rpx;
    color: #999;
    font-weight: 700;
}

.nobg image {
    width: 170rpx;
    height: 170rpx;
    margin-top: 200rpx;
    margin-bottom: 50rpx;
}