.container {
    justify-content: flex-start;
    min-height: 100%;
}

.order-nav {
    width: 750rpx;
    height: 80rpx;
    display: flex;
    justify-content: space-around;
    background: #fff;
    line-height: 80rpx;
}

.nav {
    display: inline-block;
    height: 80rpx;
    font-size: 30rpx;
    color: #666;
    font-weight: 500;
}

.on {
    box-sizing: border-box;
    color: #41c2fc;
    border-bottom: 4rpx solid #41c2fc;
}

.no {
    margin-top: 200rpx;
    height: 270rpx;
    width: 750rpx;
}

.list {
    background: #fff;
    margin-top: 20rpx;
    font-size: 28rpx;
}

.order-num {
    display: flex;
    font-size: 28rpx;
    justify-content: space-between;
    align-items: center;
    height: 82rpx;
    padding: 0rpx 20rpx;
    border-bottom: 1rpx solid #ececec;
}

.list-up {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 20rpx 0rpx;
    border-bottom: 1rpx solid #ececec;
    font-weight: 700;
}

.list-left {
    display: flex;
    padding-left: 20rpx;
}

.list-right {
    padding-right: 20rpx;
}

.left-det {
    width: 460rpx;
    display: flex;
    flex-direction: column;
    margin-left: 20rpx;
    color: #666;
    font-size: 24rpx;
    position: relative;
}

.style {
    display: inline-block;
    margin-right: 20rpx;
    font-weight: 500;
}

.left-title {
    color: #222;
    font-size: 28rpx;
    line-height: 44rpx;
    margin-bottom: 4rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    word-break: break-all;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    display: -webkit-box!important;
}

.price {
    font-size: 30rpx;
    color: #41c2fc;
    position: absolute;
    bottom: 0rpx;
}

.img {
    height: 180rpx;
    width: 180rpx;
}

.list-down {
    height: 100rpx;
    background-color: #fff;
    display: flex;
    justify-content: flex-end;
    padding: 0rpx 20rpx;
    align-items: center;
}

.list-down .btn {
    width: 150rpx;
    height: 56rpx;
    font-size: 26rpx;
    color: #222;
    text-align: center;
    line-height: 56rpx;
    justify-content: center;
    border: 1rpx solid #666;
    margin-left: 14rpx;
    border-radius: 10rpx;
}

.list-down .submit {
    color: #41c2fc;
    border: 1rpx solid #41c2fc;
}