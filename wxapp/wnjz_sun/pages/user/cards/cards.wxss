.cards {
    margin: 20rpx 20rpx 30rpx;
    font-size: 24rpx;
    box-shadow: 0rpx 0rpx 10rpx 0rpx rgba(109,205,253,0.11);
    background: rgb(236,249,255);
}

.card-price {
    padding: 6rpx 20rpx 20rpx;
    display: flex;
    justify-content: space-between;
    align-items: cneter;
    border: 1px solid rgb(65,194,252);
    color: #41c2fc;
    border-bottom: 1rpx dashed rgb(65,194,252);
    border-radius: 12rpx 12rpx 0rpx 0rpx;
    position: relative;
}

.card-price:before,.card-price:after {
    content: " ";
    display: block;
    width: 16rpx;
    height: 16rpx;
    background: #f8f8f8;
    border-radius: 50%;
    position: absolute;
    bottom: -12rpx;
    border: 1px solid rgb(65,194,252);
    z-index: 99;
    border-left: 1px solid transparent;
    border-bottom: 1px solid transparent;
}

.card-price:before {
    left: -10rpx;
    transform: rotate(45deg);
}

.card-price:after {
    transform: rotate(-135deg);
    right: -10rpx;
}

.card-time {
    border: 1rpx solid rgb(65,194,252);
    border-top: 1rpx dashed rgb(65,194,252);
    border-radius: 0rpx 0rpx 12rpx 12rpx;
    height: 118rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
    padding-left: 20rpx;
    line-height: 40rpx;
    color: #666;
}

.price {
    display: flex;
    line-height: 82rpx;
    margin-top: 20rpx;
}

.price text:nth-child(1) {
    font-size: 42rpx;
    margin-top: 20rpx;
}

.price text:nth-child(2) {
    font-size: 92rpx;
}

.right {
    width: 12rpx;
    height: 22rpx;
    margin-left: 22rpx;
}

.use {
    margin-top: 54rpx;
    font-weight: 700;
}

.nav-group {
    display: flex;
    justify-content: space-around;
    align-items: center;
    background: #fff;
    color: #666;
    font-size: 30rpx;
    height: 80rpx;
    line-height: 80rpx;
}

.nav {
    display: inline-block;
    height: 80rpx;
}

.on {
    color: #41c2fc;
    border-bottom: 4rpx solid #41c2fc;
    box-sizing: border-box;
}