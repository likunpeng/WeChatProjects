.order-nav {
    width: 750rpx;
    height: 94rpx;
    display: flex;
    justify-content: space-between;
    background: #fff;
    line-height: 94rpx;
}

.order-nav view {
    width: 375rpx;
    height: 94rpx;
    text-align: center;
    font-size: 32rpx;
    color: #666;
    font-weight: 500;
}

.nav {
    display: inline-block;
    height: 94rpx;
}

.order-nav .on {
    display: inline-block;
    color: #41c2fc;
    box-sizing: border-box;
    border-bottom: 4rpx solid #41c2fc;
}

.order-cont {
    margin-top: 20rpx;
}

.list {
    padding: 30rpx 20rpx 28rpx;
    display: flex;
    font-size: 28rpx;
    position: relative;
    border-bottom: 1rpx solid #ececec;
    background: #fff;
}

.img {
    width: 140rpx;
    height: 140rpx;
    margin-right: 20rpx;
}

.title {
    color: #222;
    margin-top: 6rpx;
    display: -webkit-box!important;
    line-height: 46rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    word-break: break-all;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    width: 428rpx;
}

.price {
    font-size: 30rpx;
    color: #f33030;
    position: absolute;
    bottom: 48rpx;
}

.actual {
    display: inline-block;
    margin-left: 20rpx;
    color: #666;
    font-size: 26rpx;
    position: relative;
}

.actual::after {
    content: " ";
    display: block;
    width: 100%;
    height: 2rpx;
    background: #666;
    position: absolute;
    bottom: 10rpx;
    transform: rotate(2deg);
}

.cur {
    text-align: right;
    color: #41c2fc;
    position: absolute;
    right: 20rpx;
}

.no {
    height: 270rpx;
    width: 750rpx;
    margin-top: 200rpx;
}