<view class="container">
    <view class="backstage">
        <view class="wrap">
            <view class="logo pretend">{{pt_name}}</view>
            <view>
                <form bindsubmit="formSubmit">
                    <view class="session">
                        <input decode="{{true}}" name="account" placeholder="" type="text" value="{{account}}"></input>
                    </view>
                    <view class="session">
                        <input name="password" placeholder="" type="password" value="{{password}}"></input>
                    </view>
                    <view class="session session-login">
                        <button class="login" formType="submit">登录</button>
                    </view>
                </form>
            </view>
        </view>
    </view>
</view>
