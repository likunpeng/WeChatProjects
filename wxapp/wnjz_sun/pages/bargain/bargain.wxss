swiper {
    height: 300rpx;
    width: 750rpx;
}

.bslide-image {
    width: 750rpx;
    height: 300rpx;
}

.bargain {
    margin-top: 30rpx;
    background: #fff;
    padding-bottom: 100rpx;
}

.bargainList {
    padding: 20rpx 20rpx 0rpx 20rpx;
    border-radius: 12rpx;
    margin-bottom: 14rpx;
}

.bargainList:nth-child(2) {
    margin-top: 10rpx;
}

.bargainItem {
    width: 710rpx;
    height: 411rpx;
    position: relative;
}

.bg-shadow {
    padding-bottom: 10rpx;
    box-shadow: 0rpx 0rpx 12rpx 0rpx rgba(4,0,0,.05);
    border-radius: 12rpx;
}

.bgImage {
    width: 710rpx;
    height: 411rpx;
    position: absolute;
}

.bargainTime {
    width: 710rpx;
    height: 60rpx;
    background: rgba(0,0,0,.5);
    position: absolute;
    bottom: 0rpx;
    line-height: 60rpx;
}

.bargainTime view {
    width: 710rpx;
    font-size: 28rpx;
    color: #fff;
    display: flex;
    justify-content: center;
    align-items: center;
}

.bargainTime image {
    width: 28rpx;
    height: 28rpx;
    margin-right: 22rpx;
    display: flex;
}

.detail {
    padding: 0rpx 20rpx;
    margin-right: 20rpx;
}

.bgTitle {
    font-weight: 700;
    font-size: 32rpx;
    color: #222;
    padding-top: 22rpx;
}

.userface {
    height: 60rpx;
    padding-top: 20rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    font-size: 30rpx;
    color: #666;
    position: relative;
}

.userface image {
    width: 60rpx;
    height: 60rpx;
    border-radius: 50%;
    position: absolute;
    left: 20rpx;
    border: 1px solid #fff;
}

.userface image:nth-child(2) {
    transform: translateX(50rpx);
}

.userface image:nth-child(3) {
    transform: translateX(110rpx);
}

.userface image:nth-child(4) {
    transform: translateX(160rpx);
}

.userface image:nth-child(5) {
    transform: translateX(210rpx);
}

.userface image:nth-child(6) {
    transform: translateX(260rpx);
}

.userface image:nth-child(7) {
    transform: translateX(310rpx);
}

.userface image:nth-child(8) {
    transform: translateX(360rpx);
}

.userface text {
    position: absolute;
    right: 0rpx;
}

.price {
    display: flex;
    flex-direction: row;
    align-items: center;
    font-size: 30rpx;
    color: #666;
    margin-top: 20rpx;
    padding-right: 0rpx;
    padding-bottom: 30rpx;
    position: relative;
}

.det-p {
    margin-top: 12rpx;
}

.price .minPrice {
    color: #f33030;
    font-size: 38rpx;
    font-weight: 700;
    margin-right: 10rpx;
}

.bgjoin {
    width: 200rpx;
    height: 68rpx;
    color: #fff;
    background: #41c2fc;
    font-size: 28rpx;
    line-height: 68rpx;
    text-align: center;
    border-radius: 34rpx;
    position: absolute;
    right: 0rpx;
    top: -8rpx;
    margin-bottom: 18rpx;
}

.nobg {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    font-size: 34rpx;
    color: #999;
    font-weight: 700;
}

.nobg image {
    width: 170rpx;
    height: 170rpx;
    margin-top: 200rpx;
    margin-bottom: 50rpx;
}