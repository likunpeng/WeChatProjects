.goods-price text {
    color: #999;
    font-weight: 500;
}

.oldprice {
    position: relative;
}

.oldprice::before {
    content: ' ';
    position: absolute;
    height: 2rpx;
    width: 100%;
    background: #999;
    top: 20rpx;
    transform: rotate(1deg);
}

.num {
    font-weight: 700;
    line-height: 180rpx;
}

.sec {
    height: 90rpx;
    align-items: center;
    justify-content: space-between;
    margin-top: 0rpx;
    padding: 0rpx 20rpx 0rpx 12rpx;
}

.sec-addr {
    margin-top: 10rpx;
    border-bottom: 1rpx solid #ececec;
}

.sec-left {
    display: flex;
    align-items: center;
}

.adr {
    display: flex;
    align-items: center;
}

.address {
    width: 38rpx;
    height: 38rpx;
    margin-right: 12rpx;
}

.addr_one {
    line-height: 46rpx;
    font-size: 32rpx;
    display: flex;
    flex-direction: column;
    align-items: flex-end;
    margin: 0rpx 20rpx;
    position: absolute;
    right: 30rpx;
}

.one_row {
    font-size: 28rpx;
    color: #000;
}

.two_row {
    font-size: 26rpx;
    color: #999;
    width: 500rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.addr {
    line-height: 46rpx;
    font-size: 32rpx;
    display: flex;
    align-items: center;
}

.addr view:last-child {
    font-size: 26rpx;
    color: #999;
}

.right {
    margin-left: 16rpx;
}

.msg {
    display: flex;
    align-items: center;
}

.msgInput {
    width: 540rpx;
}

.sec-msg {
    margin-top: 10rpx;
    height: 110rpx;
    padding: 0rpx 20rpx;
}

.footer {
    position: fixed;
    bottom: 0rpx;
    height: 98rpx;
    width: 750rpx;
    display: flex;
    align-items: center;
    justify-content: flex-end;
    box-shadow: 0rpx -3rpx 3rpx 0rpx rgba(180,180,180,0.078);
}

.submit {
    width: 210rpx;
    margin-left: 48rpx;
}

.submit button {
    width: 210rpx;
    height: 98rpx;
    border-radius: 0rpx;
    background: #41c2fc;
    color: #fff;
    font-size: 36rpx;
}

.total text {
    color: #ff5959;
    font-weight: 700;
}

.drawer_screen {
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    z-index: 1000;
    background: #000;
    opacity: 0.5;
    overflow: hidden;
}

.drawer_box {
    width: 750rpx;
    overflow: hidden;
    position: fixed;
    bottom: 0rpx;
    left: 0;
    z-index: 1001;
    background: #fff;
}

.drawer_title {
    font-size: 32rpx;
    line-height: 30rpx;
    color: #222;
    font-weight: 700;
    padding: 24rpx 20rpx;
    display: flex;
    justify-content: space-between;
}

.cancel {
    width: 30rpx;
    height: 30rpx;
}

.drawer_content {
    height: 500rpx;
    overflow-y: scroll;
}

.cards {
    margin: 0rpx 20rpx 30rpx;
    font-size: 24rpx;
    box-shadow: 0rpx 0rpx 10rpx 0rpx rgba(109,205,253,0.11);
    background: rgb(223,255,251);
}

.card-prices {
    padding: 6rpx 20rpx 20rpx;
    display: flex;
    justify-content: space-between;
    align-items: cneter;
    border: 1rpx solid rgb(40,183,163);
    color: #41c2fc;
    border-bottom: 1rpx dashed rgb(40,183,163);
    border-radius: 12rpx 12rpx 0rpx 0rpx;
    position: relative;
}

.card-prices:before,.card-prices:after {
    content: " ";
    display: block;
    width: 16rpx;
    height: 16rpx;
    background: #f8f8f8;
    border-radius: 50%;
    position: absolute;
    bottom: -12rpx;
    border: 1rpx solid rgb(40,183,163);
    z-index: 99;
    border-left: 1rpx solid transparent;
    border-bottom: 1rpx solid transparent;
}

.card-prices:before {
    left: -10rpx;
    transform: rotate(45deg);
}

.card-prices:after {
    transform: rotate(-135deg);
    right: -10rpx;
}

.card-time {
    border: 1rpx solid rgb(40,183,163);
    border-top: 1rpx dashed rgb(40,183,163);
    border-radius: 0rpx 0rpx 12rpx 12rpx;
    height: 118rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
    padding-left: 20rpx;
    line-height: 40rpx;
    color: #666;
}

.price {
    display: flex;
    line-height: 92rpx;
    margin-top: 16rpx;
}

.price text:nth-child(1) {
    font-size: 42rpx;
    margin-top: 16rpx;
}

.price text:nth-child(2) {
    font-size: 92rpx;
}

.right {
    width: 12rpx;
    height: 22rpx;
    margin-left: 22rpx;
}

.use {
    margin-top: 54rpx;
    font-weight: 700;
}

.choose-pay {
    background: #fff;
}

.section {
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-size: 28rpx;
    height: 80rpx;
    border-bottom: 1rpx solid #ececec;
    margin-left: 20rpx;
}

.radio {
    width: 730rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 100rpx;
    font-size: 32rpx;
    color: #999;
    border-bottom: 1rpx solid #ececec;
    margin-left: 20rpx;
    padding-right: 20rpx;
}

.radio radio {
    width: 48rpx;
    height: 48rpx;
}

.radio:last-child {
    border-bottom: 0rpx solid #ececec;
}

.det {
    display: flex;
    align-items: center;
}

.wxicon {
    width: 34rpx;
    height: 34rpx;
    margin-left: 24rpx;
    margin-right: 20rpx;
}

.drawer-foot {
    border-top: 1rpx solid #acacac;
    height: 130rpx;
    padding: 20rpx 20rpx;
}

.drawer-foot button {
    height: 90rpx;
    background: #41c2fc;
