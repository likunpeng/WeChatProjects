.coupon-list {
    padding: 0rpx 20rpx 0rpx;
    display: flex;
    margin-top: 30rpx;
}

.coupon-item {
    width: 710rpx;
    height: 200rpx;
    border-radius: 10rpx;
    background-color: #41c2fc;
    box-shadow: 0rpx 0rpx 10rpx 0rpx rgba(4,0,0,0.11);
    display: flex;
    flex-direction: row;
}

.invalid {
    background: rgb(171,171,171);
}

.coupon-cont {
    width: 510rpx;
    padding-left: 20rpx;
    color: #fff;
    font-size: 22rpx;
    margin-top: 24rpx;
}

.coupon-cont view {
    margin-top: 16rpx;
}

.coupon-cont .coupon-money {
    font-size: 58rpx;
    font-weight: 700;
    padding-bottom: 34rpx;
}

.coupon-money text {
    font-size: 30rpx;
    margin-right: 4rpx;
}

.coupon-status {
    width: 200rpx;
    border-left: 1px dashed #fff;
    font-size: 28rpx;
    color: #fff;
    text-align: center;
    line-height: 200rpx;
}

.coupon-money {
    margin-top: 30rpx;
}