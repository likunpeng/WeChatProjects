.order-nav {
    width: 750rpx;
    height: 100rpx;
    display: flex;
    justify-content: space-between;
    background: #fff;
    line-height: 100rpx;
}

.order-nav view {
    width: 375rpx;
    height: 100rpx;
    text-align: center;
    font-size: 30rpx;
    color: #222;
}

.nav {
    display: inline-block;
    height: 100rpx;
}

.order-nav .on {
    box-sizing: border-box;
    color: #41c2fc;
    border-bottom: 2rpx solid #41c2fc;
}

.session {
    margin-top: 20rpx;
    padding: 0rpx 20rpx 0rpx;
    background: #fff;
}

.session-order-title {
    margin-left: 20rpx;
}

.session-wrap {
    display: flex;
    flex-direction: column;
    margin-top: 24rpx;
}

.session-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-top: 30rpx;
    padding-bottom: 26rpx;
    border-bottom: 1rpx solid #ececec;
}

.session-item:last-child {
    border-bottom: 0rpx solid #fff;
}

.item-left {
    display: flex;
    color: #999;
}

.order {
    width: 120rpx;
    height: 120rpx;
    margin-right: 20rpx;
}

.item-title {
    font-size: 32rpx;
    line-height: 32rpx;
    margin-top: 6rpx;
    margin-bottom: 16rpx;
    color: #222;
}

.item-desc {
    width: 400rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    line-height: 32rpx;
}

.item-price {
    margin-top: 22rpx;
    font-size: 26rpx;
    font-weight: 700;
    color: #41c2fc;
}

.item-right {
    height: 64rpx;
    width: 124rpx;
    border: 2rpx solid #41c2fc;
    border-radius: 4rpx;
    font-size: 26rpx;
    font-weight: 700;
    color: #41c2fc;
    line-height: 64rpx;
    text-align: center;
}

.detCont {
    width: 414rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}